<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Workshop Store{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Store</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="{{ path('store_public_homepage') }}">Home</a></li>
            {% if is_granted("ROLE_ADMIN") %}
                <li><a href="{{ path('store_user') }}"> Member</a></li>
                <li><a href="{{ path('store_category') }}"> Category</a></li>
                <li><a href="{{ path('store_product') }}"> Product</a></li>
                <li><a href="{{ path('store_cart') }}"> Cart</a></li>
            {% else %}
            <li><a href="{{ path('store_public_contact') }}">contact</a></li>
            {% endif %}

        </ul>
        <ul class="nav navbar-nav navbar-right">
            {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('store_member_cart') }}"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                <li><a href="{{ path('store_member_product') }}"><span class="glyphicon glyphicon-shopping-cart"></span> buy product</a></li>
            {% endif %}
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span>Deconnexion</a></li>
            {% else %}
                <li><a href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                <li><a href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            {% endif %}


        </ul>
    </div>
</nav>
<div class="container">
    {% block body %}
    {% endblock %}
    <hr>
    <footer>
        <p>{{ 'now'|date('d-m-Y') }}</p>
    </footer>
</div>
{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}
</body>
</html>